<h2>Product info</h2>

<p>Name: <%= @product.title %></p>
<p>Price: <%= @product.price %>$</p>
<p>Views: <%= @product.views %></p>
<br>

<h4>Buy with</h4>
    <% if @buy_with != nil %>
        <% @buy_with.each do |element| %>
            <p><%= link_to element.title, element %></p>
        <% end %>
    <% end %>
<br>

<h4>View with</h4>
    <% if @view_with != nil %>
        <% @view_with.each do |element| %>
            <p><%= link_to element.title, element %></p>
        <% end %>
    <% end %>
<br>

<h4>Add to cart with</h4>
    <% if @in_cart != nil %>
        <% @in_cart.each do |element| %>
            <p><%= link_to element.title, element %></p>
        <% end %>
    <% end %>
<br>

<% if @bought == false %>
    <% if @remove %>
        <p><%= link_to 'Remove', remove_path %></p>
    <% else %>
        <p><%= link_to 'Add to cart', edit_product_path %></p>
    <% end %>
<% end %>

<p><%= link_to 'Back', products_path %></p>